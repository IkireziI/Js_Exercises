function pattern(p){
    
    for (let j = 0; j < p ; j++) {
        var arr=[];
        for (let i = p-1; i >= 0; i--) {
          if(i>=j){
            arr+="1 ";
          } 
          else{
            arr+="0 ";
          } 
        }
        console.log(arr);
    }
}
pattern(4);

