function pattern(p){
    
    for (let j = 0; j < p ; j++) {
        var arr=[];
        for (let i = 0; i < p; i++) {
          if(i===0||i===p-1||j===0||j===p-1){
            arr+="1 ";
          } 
          else{
            arr+="0 "
          } 
        }
        console.log(arr);
    }
}
pattern(5);

